<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/black"
    android:id="@+id/title_rl"
    >
<ImageView
    android:id="@+id/title_back"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:src="@drawable/icon_back"
    android:visibility="gone"
    />
    <TextView
        android:id="@+id/title_wei_xin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="微信"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:visibility="gone"/>




    <ImageView
        android:id="@+id/title_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_more"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/title_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/em_add"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/title_quenliao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_qunliao"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/title_text_middle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/title_text_end"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:textSize="30sp"/>
    <ImageView
        android:id="@+id/title_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/icon_btn_delete"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />
</RelativeLayout>